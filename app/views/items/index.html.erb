<h1>Everything I Want to Do</h1>

<br>
<table>
  <thead>
    <tr>
      <th></th>
      <th>User</th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.description %></td> 
        <td><%= item.user.email if item.user %></td>
        <td><%= link_to 'Show', item %> | </td> 
        
        <% if item.user == current_user%>
        <td><%= link_to 'Edit', edit_item_path(item) %> | </td>
        <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %>

              <span class="glyphicon glyphicon-trash"></span></td> 
              <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if user_signed_in? %>
  <%= link_to 'Add more', new_item_path, class: "btn btn-primary" %>

  <% else %> 
    <%= link_to 'Start your own list!', new_user_registration_path, class: "btn btn-primary" %>
<% end %>